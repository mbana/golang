; http://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.go]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
